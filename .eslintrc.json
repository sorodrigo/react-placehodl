{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "extends": ["airbnb", "prettier"],
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": "warn",
    "arrow-parens": 0,
    "quotes": ["error", "single", { "avoidEscape": true }],
    "import/extensions": ["error", "always", {
      "js": "never",
      "jsx": "never"
    }],
    "import/no-extraneous-dependencies": ["error"],
    "no-debugger": 2,
    "comma-dangle": ["error", "never"]
  }
}
